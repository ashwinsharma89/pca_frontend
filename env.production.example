# Environment Variables for Production
# Copy this file to .env.production and update with your production values

# ============================================================================
# API Configuration
# ============================================================================

# Backend Domain (without trailing slash) - used by browser/client-side
NEXT_PUBLIC_BACKEND_DOMAIN=https://api.yourdomain.com

# Internal API URL - used by Next.js server-side (SSR) in Docker
INTERNAL_API_URL=http://api:8000/api/v1

# Frontend URL - used by Playwright tests
BASE_URL=https://yourdomain.com

# ============================================================================
# App Configuration
# ============================================================================

NEXT_PUBLIC_APP_NAME=PCA Agent
NEXT_PUBLIC_APP_VERSION=1.0.0

# ============================================================================
# Feature Flags
# ============================================================================

# Enable analytics tracking
NEXT_PUBLIC_ENABLE_ANALYTICS=true

# Enable debug mode
NEXT_PUBLIC_ENABLE_DEBUG=false
